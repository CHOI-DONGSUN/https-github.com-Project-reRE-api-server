{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "webpack": true,
    "assets": [
      "**/*.proto",
      "**/*.json",
      "**/*.png",
      "**/*.py",
      "**/*.template.html"
    ],
    "watchAssets": true
  },
  "projects": {
    "rest-api-gateway": {
      "type": "application",
      "root": "apps/rest-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/rest-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/rest-api-gateway/tsconfig.app.json"
      }
    }
  }
}